<h1>All Pets</h1>
<hr>
<% @pets.each do |pet| %>
  <%= image_tag "/assets/images/#{pet.image}", height: '100', width: 'auto' %>
  <h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
  <p>
    Approximate Age: <%= "#{pet.age}" %>
    <br>
    Sex: <%= "#{pet.sex}" %>
    <br>
    Shelter: <%= "#{Shelter.find(pet.shelter_id).name}" %>
  </p>
  <%= button_to "Edit #{pet.name} Info", "/pets/#{pet.id}/edit", method: :get %>
  <br>
  <%= button_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
<% end %>
<br>
<hr>
<br>
<%= button_to 'Create Pet', '/pets/new', method: :get %>
