<h1>Pets at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h1>
<hr>
<%= @pets.each do |pet| %>
<br>
<%= image_tag "#{pet.image}", height: '200', width: 'auto' %>
<h3><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
<p>
  Approximate Age: <%= "#{pet.age}" %>
  <br>
  Sex: <%= "#{pet.sex}" %>
  <br>
</p>
<hr>
<% end %>
