<h1>Edit <%= @pet.name %> Info</h1>

<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :age %>
  <%= text_field_tag :age %>
  <%= label_tag :description %>
  <%= text_field_tag :description %>
  <%= label_tag :image %>
  <%= text_field_tag :image %>
  <br>
  <br>
  <%= select_tag :sex, options_for_select([['Male'], ['Female']], id: 'sex') %>
  <br>
  <br>
  <%= submit_tag 'Update Pet Info' %>
<% end %>
